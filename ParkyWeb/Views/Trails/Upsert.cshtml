@model ParkyWeb.Models.ViewModel.TrailVM

<form method="post" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">

        <div class="col-12 p-3">
            @if (Model.Trail.Id != 0)
            {
                <h2 class="text-primary">Update Trail</h2>
                <input type="hidden" asp-for="Trail.Id" />
            }
            else
            {
                <h2 class="text-primary">Create Trail</h2>
            }

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label>Trail name</label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Name" class="form-control" />
                    <span asp-validation-for="Trail.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Nationl Park</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(c =>
                          c.Trail.NationalParkId, Model.NationalParkList, "Select NationalPark",
                               new { @class = "form-control" })
                    <span asp-validation-for="NationalParkList" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Trail Difficulty</label>
                </div>
                <div class="col-8">
                    <select asp-for="Trail.Difficulty" 
                            asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()" 
                            class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Distance</label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Distance" class="form-control" />
                    <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Elevation</label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Elevation" class="form-control" />
                    <span asp-validation-for="Trail.Elevation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Trail.Id !=0 ? "Update": "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>
